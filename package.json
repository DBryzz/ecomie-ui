{
  "name": "ecomie-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:quiet": "eslint --quiet --ext=.js,.ts,.tsx ./src",
    "clean:install": "rm -rf node_modules && npm install",
    "packages:list": "npm list --depth 0",
    "packages:update": "npx npm-check-updates -u",
    "packages:outdated": "npm outdated",
    "packages:update-install": "npx npm-check-updates -u && npm install",
    "cache:clean-force": "npm cache clean --force",
    "count-src:lines-of-code": "find ./src -type f \\( -iname \\*.ts -o -iname \\*.js -o -iname \\*.tsx \\) | xargs wc -l",
    "count-test:lines-of-code": "find ./test -type f \\( -iname \\*.ts -o -iname \\*.js \\) | xargs wc -l"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@splidejs/react-splide": "^0.7.12",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.312.0",
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
